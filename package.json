{
    "name": "@vuetags/root",
    "description": "Simple, type safe and flexible component library that improves native HTML tags.",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "test": "clear && vitest run",
        "test:watch": "clear && vitest",
        "test:coverage": "clear && vitest run --coverage",
        "test:unit": "clear && vitest run --project unit",
        "test:browser": "clear && vitest run --project browser",
        "build": "npm --prefix ./packages/inputs/ run build",
        "release": "npm --prefix ./packages/inputs/ run release",
        "dev": "npm --prefix ./packages/playground/ run dev",
        "preview": "npm --prefix ./packages/playground/ run preview",
        "update": "npm run build && npm i",
        "docs:dev": "vitepress dev packages/documentation",
        "docs:build": "vitepress build packages/documentation",
        "docs:preview": "vitepress preview packages/documentation"
    },
    "devDependencies": {
        "@tsconfig/node22": "^22.0.2",
        "@types/jsdom": "^27.0.0",
        "@types/node": "^24.9.2",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vitest/browser": "^4.0.6",
        "@vitest/browser-playwright": "^4.0.6",
        "@vitest/coverage-v8": "^4.0.6",
        "@vitest/eslint-plugin": "^1.4.0",
        "@vue/eslint-config-prettier": "^10.2.0",
        "@vue/eslint-config-typescript": "^14.6.0",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.8.1",
        "@vueuse/core": "^14.0.0",
        "eslint": "^9.39.0",
        "eslint-plugin-vue": "^10.5.1",
        "jiti": "^2.6.1",
        "happy-dom": "^20.0.10",
        "jsdom": "^27.1.0",
        "playwright": "^1.56.1",
        "prettier": "^3.6.2",
        "typescript": "^5.9.3",
        "vite": "^7.1.12",
        "vite-plugin-vue-devtools": "^8.0.3",
        "vitepress": "^1.6.4",
        "vitest": "^4.0.6",
        "vue": "^3.5.22"
    }
}
